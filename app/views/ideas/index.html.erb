<h1 class="center"><strong>MY LIST</strong></h1>

<% @ideas.in_groups_of(3) do |group| %>
  <div class="row center">
    <% group.compact.each do |idea| %>
      <div class="col-md-4 each_img">
        <%= image_tag idea.picture_url(:thumb) if idea.picture? %>
        <h4><%= link_to idea.name, idea, class: "center" %></h4>
        <%= idea.description %>
      </div>
    <% end %>
  </div>
<% end %>
